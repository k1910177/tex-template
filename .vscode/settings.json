{
  // General settings
  "workbench.preferredHighContrastColorTheme": "Default Dark+",
  "workbench.colorTheme": "Default Dark+",
  "editor.fontFamily": "Myrica M, Consolas, 'Courier New', monospace",
  "editor.unicodeHighlight.ambiguousCharacters": false,
  "editor.unicodeHighlight.allowedCharacters": {
    "ã€€": true
  },
  "editor.suggest.showWords": false,
  "git.decorations.enabled": false,
  "editor.guides.bracketPairs": false,
  "editor.bracketPairColorization.enabled": true,
  "files.exclude": {
    "**/indent.log": true,
    "**/.svn": true,
    "**/.hg": true,
    "**/CVS": true,
    "**/.DS_Store": true,
    "**/Thumbs.db": true,
    "**/*.dvi": true,
    "**/*.aux": true,
    "**/*.fls": true,
    "**/*.atfi": true,
    "**/*.nav": true,
    "**/*.snm": true,
    "**/*.toc": true,
    "**/*.asv": true,
    "**/*.stderr": true,
    "**/*.stdout": true,
    "**/_minted-*/": true,
    "**/_markdown_*/": true,
    "**/pythontex-files-*/": true,
    "**/*.pytxcode": true,
    "**/*.markdown.in": true,
    "**/*.markdown.lua": true,
    "**/*.fdb_latexmk": true,
    "**/*.synctex.gz": true,
    "**/__latexindent_temp.tex": true,
    "**/*.pyg": true,
    "**/*.out": true,
    "**/*.bbl": true,
    "**/*.blg": true,
    "**/*.bcf": true,
    "**/*-blx.bib": true,
    "**/*.run.xml": true,
    "**/*.texmfcache": true,
    "**/svg-inkscape*": true,
    "**/*.synctex(busy)": true,
    "build/preamble": true,
    "build/figures": true,
  },

  // Latex settings
  "latex-workshop.message.badbox.show": "none", // hide underfull warnings
  "latex-workshop.view.pdf.viewer": "tab",
  "latex-workshop.latex.autoBuild.run": "never",
  "latex-workshop.latex.autoBuild.cleanAndRetry.enabled": true,
  "latex-workshop.latex.clean.subfolder.enabled": true,
  "latex-workshop.latex.autoClean.run": "onBuilt",
  "latex-workshop.formatting.latexindent.path": "latexindent",
  "latex-workshop.formatting.latexindent.args": [
      "-c",
      "%DIR%/",
      "%TMPFILE%",
      "-y=defaultIndent: '%INDENT%'"
  ],
  "latex-workshop.latex.outDir": "%WORKSPACE_FOLDER%/build",
  "latex-workshop.latex.tools": [
    {
      "name": "init",
      "command": "mkdir",
      "args": [
        "-p",
        "%WORKSPACE_FOLDER%/build"
      ]
    },
    {
      "name": "latexmk",
      "command": "latexmk",
      "args": [
        "-outdir=%WORKSPACE_FOLDER%/build",
        "-jobname=%RELATIVE_DIR%",
        "-r",
        "%WORKSPACE_FOLDER%/.latexmkrc",
        "-cd",
        "%WORKSPACE_FOLDER%/%RELATIVE_DIR%/main.tex"
      ]
    }
  ],
  "latex-workshop.latex.recipes": [
    {
      "name": "lualatex",
      "tools": [
        "init",
        "latexmk"
      ]
    }
  ]
}